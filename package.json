{
  "name": "stockfish",
  "description": "The Stockfish chess engine in Web Assembly (WASM) with modern TypeScript interface",
  "version": "17.1.0",
  "type": "module",
  "author": {
    "name": "Nathan Rugg",
    "email": "nmrugg@gmail.com"
  },
  "contributors": [
    {
      "name": "Chess.com",
      "url": "https://www.chess.com"
    }
  ],
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  },
  "keywords": [
    "chess",
    "stockfish",
    "typescript",
    "esm",
    "es-modules",
    "async",
    "await",
    "engine",
    "wasm",
    "webassembly"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/nmrugg/stockfish.js"
  },
  "license": "GPL",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "src/",
    "lib/"
  ],
  "bin": {
    "stockfishjs": "./stockfishjs"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "dev": "ts-node --esm lib/index.ts",
    "example:quick": "ts-node --esm examples/quick-test.ts",
    "example:modern": "ts-node --esm examples/modern-example.ts",
    "prepare": "npm run build",
    "pack": "npm run build && npm pack",
    "pack:test": "npm run pack && npm install -g ./stockfish-*.tgz",
    "pack:clean": "rm -f stockfish-*.tgz && rm -rf temp-package-test",
    "pack:local": "npm run build && npm pack && echo '\\nâœ… Local package created: stockfish-*.tgz\\nðŸ“¦ To test locally, run: npm install ./stockfish-*.tgz\\nðŸ§¹ To clean up, run: npm run pack:clean'",
    "pack:verify": "npm run pack:local && node scripts/test-local-package.mjs && npm run pack:clean"
  },
  "readmeFilename": "readme.md"
}
